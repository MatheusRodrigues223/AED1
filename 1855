#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <stdbool.h>

void andar(char matriz[][], bool visitado[][], int x, int y, int X, int Y) {
    
    if (!visitado[y][x]) {
        
        visitado[y][x] = 1;
        
        if (matriz[y][x] == '>') {
            while (matriz[y][x + 1] == '.' && x + 1 <= X) {
                x++;
            }
            andar(matriz, visitado, x, y, X, Y);
        }
        else if (matriz[y][x] == '<') {
            while (matriz[y][x - 1] == '.' && x - 1 >= 0) {
                x--;
            }
            andar(matriz, visitado, x, y, X, Y); 
        }
        else if (matriz[y][x] == 'v') {
            while (matriz[y + 1][x] == '.' && y + 1 <= Y) {
                y++;
            }
            andar(matriz, visitado, x, y, X, Y); 
        }
        else if (matriz[y][x] == '^') {
            while (matriz[y - 1][x] == '.' && y - 1 >= 0) {
                y--;
            }
            andar(matriz, visitado, x, y, X, Y);
        }
        else if (matriz[y][x] == '*') {
            printf("8\n")
        }
        else {
            printf("!\n");
        }
    }
    else {
        printf("!\n");
    }
}




int main() {
    int x, y;
    
    scanf("%d", &x);
    scanf("%d", &y);
    
    char matriz[y + 1][x + 1]
    bool visitado[y + 1][x + 1]
    
    for (int i = 0; i < y; i++) {
        for (int j = 0; j < x; j++) {
            scanf("%d", &matriz[i]][j]);
            visitado[i][j] = 0
        }
    }
    
    andar(matriz, visitado, 0, 0, x, y);
    
    
    
    return 0;
}
